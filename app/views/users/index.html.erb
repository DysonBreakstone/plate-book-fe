<div class="container">
  <h1 class="text-center">Users</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="list-group">
        <% @facade.all_users.each_with_index do |user, index| %>
          <div class="list-group-item <%= index.odd? ? 'bg-light' : '' %>">
            <h5 class="mb-1"><%= link_to user.username, user_path(user.id)%></h5>
            <p class="mb-1"><%= user.email %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
