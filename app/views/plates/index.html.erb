<div class="container">
  <h1 class="text-center">Plates</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="list-group">
        <% @facade.all_plates.each_with_index do |plate, index| %>
          <div class="list-group-item <%= index.odd? ? 'bg-light' : '' %>">
            <h5 class="mb-1 text-center"><%= link_to plate.plate_number, plate_path(plate.id), class: "btn-license-plate" %></h5>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

