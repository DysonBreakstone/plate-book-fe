<script>
document.addEventListener('DOMContentLoaded', (event) => {
    // Get all tag buttons and add event listener
    var tagButtons = document.querySelectorAll('.tag-button');
    tagButtons.forEach(button => {
        button.addEventListener('click', (event) => {
            var tag = event.target.getAttribute('data-tag'); // Get the tag from the button
            var selectedTagsInput = document.getElementById('selected_tags');
            var selectedTags = selectedTagsInput.value ? selectedTagsInput.value.split(',') : []; // Get the current selected tags and split them into an array

            // Check if the tag is already in the selected tags
            if (selectedTags.includes(tag)) {
                // If the tag is already selected, remove it
                selectedTags = selectedTags.filter(function(selectedTag) {
                    return selectedTag !== tag;
                });
            } else {
                // If the tag isn't selected, add it
                selectedTags.push(tag);
            }
            selectedTagsInput.value = selectedTags.join(',');
        });
    });
});
</script>
